{
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.md",
      "options": {
        "printWidth": 300
      }
    },
    {
      "files": "*.js",
      "options": {
        "printWidth": 200,
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "arrowParens": "always",
        "bracketSameLine": false
      }
    },
    {
      "files": "*.ts",
      "options": {
        "printWidth": 200,
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "arrowParens": "always",
        "bracketSameLine": false
      }
    }
  ]
}
